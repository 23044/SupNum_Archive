<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SemestreActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_supnum_archive_radous"
            android:contentDescription="Logo"/>

        <TextView
            android:id="@+id/app_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Archive SupNum"
            android:textColor="#57273d"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/footer_profile_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:contentDescription="Photo de profil"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />
    </LinearLayout>

    <TextView
        android:id="@+id/semestre_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matieres"
        android:textStyle="bold"
        android:textColor="#57273d"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/semestre_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/semestre_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footer_layout">

        <LinearLayout
            android:id="@+id/layout_matiere1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_blue"
            android:elevation="8dp"
            android:padding="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiere1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_matiere2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_blue"
            android:elevation="8dp"
            android:padding="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiere2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_matiere3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_blue"
            android:elevation="8dp"
            android:padding="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiere3"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_matiere4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_blue"
            android:elevation="8dp"
            android:padding="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiere4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_matiere5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_blue"
            android:elevation="8dp"
            android:padding="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiere5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_matiere6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_blue"
            android:elevation="8dp"
            android:padding="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiere6"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_home"
            android:contentDescription="Icon Home"/>

        <ImageView
            android:id="@+id/icon_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_chat"
            android:contentDescription="Icon Chat"/>

        <ImageView
            android:id="@+id/icon_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_notification"
            android:contentDescription="Icon Notification"/>
        <ImageView
            android:id="@+id/icon_telechrge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/telecharg"
            android:contentDescription="Icon Notification"/>

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_back"
            android:contentDescription="Icon Back"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>