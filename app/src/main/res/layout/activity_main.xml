<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Header amélioré -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:weightSum="3">

        <!-- Icône d'aide -->
        <ImageView
            android:id="@+id/help_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="Aide"
            android:padding="8dp"
            android:layout_gravity="start"
            android:tint="#2196F3" />

        <!-- Titre de l'app -->
        <TextView
            android:id="@+id/app_header"
            android:text="Mon Application Étudiante"
            android:textSize="20sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <!-- Icône de profil -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="Profil"
            android:padding="8dp"
            android:layout_gravity="end"
            app:tint="#2196F3" />
    </LinearLayout>

        <!-- Section Matières -->
        <TextView
            android:text="Semestres"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" />

        <!-- Grille des Semestres -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:layout_marginBottom="16dp">

            <!-- S1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- S2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- S3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S3"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- S4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S4"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- S5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S5"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- S6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S6"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </GridLayout>

        <!-- Section Supériérate -->
        <TextView
            android:text="Supériérate"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp" />

        <!-- Profil 1 -->
        <include layout="@layout/profil_card"
            android:id="@+id/profil1" />

        <!-- Profil 2 -->
        <include layout="@layout/profil_card"
            android:id="@+id/profil2" />

    </LinearLayout>
</ScrollView>
