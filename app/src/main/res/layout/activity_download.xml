<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#FAFAFA">
    <!--  Header  -->
    <LinearLayout android:layout_width="match_parent" android:layout_marginTop="59px" android:layout_height="60dp" android:orientation="horizontal" android:padding="10dp" android:background="#FFFFFF" android:gravity="center_vertical">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:contentDescription="Logo"
            android:src="@drawable/logo_supnum_archive_radous" />

        <TextView
            android:id="@+id/app_header"
            android:layout_width="212dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Archive SupNum"
            android:textColor="#57273d"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/footer_profile_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:clipToOutline="true"
            android:contentDescription="Photo de profil"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />      </LinearLayout>
    <!--  Title  -->
    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#551A1A"/>
    <!--  List of sujets  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="vertical" android:padding="16dp">

        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" download design activity contient les files telecharger par le user corrant "
            android:textColor="#57273d"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_home"
            android:contentDescription="Icon Home" />

        <ImageView
            android:id="@+id/icon_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_chat"
            android:contentDescription="Icon Chat" />

        <ImageView
            android:id="@+id/icon_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_notification"
            android:contentDescription="Icon Notification" />

        <ImageView
            android:id="@+id/icon_telechrge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/telecharg"
            android:contentDescription="Icon Download" />

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_back"
            android:contentDescription="Icon Back" />
    </LinearLayout>

</LinearLayout>