<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footer_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/header_layout0"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo_supnum_archive_radous"
                        android:contentDescription="Logo" />

                    <TextView
                        android:id="@+id/app_header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Archive SupNum"
                        android:textColor="#57273d"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/footer_profile_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onProfileClick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        android:contentDescription="Photo de profil" />
                </LinearLayout>


                <TextView
                    android:text="Semestres"
                    android:textStyle="bold"
                    android:textColor="#57273d"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:layout_marginTop="16dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:alignmentMode="alignMargins"
                    android:rowOrderPreserved="false"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center">

                    <!-- Semestres S1 à S6 -->
                    <LinearLayout
                        android:id="@+id/s1_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_background_blue"
                        android:elevation="8dp"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S1"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s2_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_background_blue"
                        android:elevation="8dp"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S2"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s3_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_background_blue"
                        android:elevation="8dp"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S3"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s4_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_background_blue"
                        android:elevation="8dp"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S4"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s5_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_background_blue"
                        android:elevation="8dp"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S5"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s6_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_background_blue"
                        android:elevation="8dp"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S6"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </GridLayout>

                <TextView
                    android:text="Supériérate"
                    android:textStyle="bold"
                    android:textColor="#57273d"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:layout_marginBottom="16dp" />

                <include
                    layout="@layout/profil_card"
                    android:id="@+id/profil1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/profil_card"
                    android:id="@+id/profil2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/upload_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:background="#F8F8F8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Téléverser un fichier"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#57273d"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/upload_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Titre"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/upload_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/select_file_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choisir un fichier"
                        android:backgroundTint="#57273d"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/upload_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Téléverser"
                        android:backgroundTint="#57273d"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_home"
            android:contentDescription="Icon Home"/>

        <ImageView
            android:id="@+id/icon_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_chat"
            android:contentDescription="Icon Chat"/>

        <ImageView
            android:id="@+id/icon_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_notification"
            android:contentDescription="Icon Notification"/>

        <ImageView
            android:id="@+id/icon_telechrge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/telecharg"
            android:contentDescription="Icon Téléchargement"/>

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon_back"
            android:contentDescription="Icon Back"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>